{% extends 'base.html' %}

{% block title %}Dashboard - Étudiant{% endblock %}

{% block breadcrumbs %}
<li class="breadcrumb-item active" aria-current="page">Dashboard</li>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Bonjour, {{ request.user.prenom }} {{ request.user.nom }}</h1>
            <p class="text-muted">Année Académique 2024-2025</p>
        </div>
        <div>
            <span class="badge bg-primary fs-6">Étudiant</span>
        </div>
    </div>

    <!-- Alerts Section -->
    {% if notifications %}
    <div class="card shadow-sm mb-4 border-left-primary">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-bell me-2"></i>Dernières Notifications</h6>
        </div>
        <div class="list-group list-group-flush">
            {% for notif in notifications %}
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-info-circle text-info me-2"></i>
                    {{ notif.message }}
                </div>
                <small class="text-muted">{{ notif.date_envoi|date:"d/m/Y H:i" }}</small>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Course Cards -->
    <h4 class="mb-3">Mes Cours</h4>
    <div class="row">
        {% for c in cours_data %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title fw-bold text-dark">{{ c.nom }}</h5>
                        {% if c.status %}
                        <span class="badge bg-success">Éligible</span>
                        {% else %}
                        <span class="badge bg-danger">Bloqué</span>
                        {% endif %}
                    </div>
                    <p class="card-text text-muted small"><i class="fas fa-chalkboard-teacher me-1"></i> {{ c.professeur
                        }}</p>

                    <div class="mt-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small fw-bold">Absences: {{ c.total_abs }}h / {{ c.seuil_h }}h</span>
                            <span class="small fw-bold">{{ c.percent|floatformat:0 }}% du seuil</span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar {% if c.absence_rate < 30 %}bg-success{% elif c.absence_rate < 40 %}bg-warning{% else %}bg-danger{% endif %}"
                                role="progressbar" style="width: {{ c.percent }}%;" aria-valuenow="{{ c.percent }}"
                                aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <small class="text-muted mt-1 d-block">
                            {% if c.absence_rate >= 40 %}
                            <i class="fas fa-exclamation-triangle text-danger"></i> Seuil dépassé (Rate: {{
                            c.absence_rate|floatformat:1 }}%)
                            {% elif c.absence_rate >= 30 %}
                            <i class="fas fa-exclamation-circle text-warning"></i> Attention, proche du seuil (Rate: {{
                            c.absence_rate|floatformat:1 }}%)
                            {% else %}
                            <i class="fas fa-check-circle text-success"></i> Situation normale (Rate: {{
                            c.absence_rate|floatformat:1 }}%)
                            {% endif %}
                        </small>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                    <a href="{% url 'absences:details' c.id %}" class="btn btn-outline-primary w-100 mt-2">
                        <i class="fas fa-list-alt me-2"></i>Détails des absences
                    </a>
                </div>
            </div>
        </div>
        {% empty %}
        <div class="col-12">
            <div class="alert alert-info">
                Aucune inscription trouvée pour le moment.
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}